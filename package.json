{
  "name": "rules-wizard",
  "version": "1.0.0",
  "description": "AI-powered wizard for generating IDE rulesets",
  "main": "index.js",
  "scripts": {
    "build:css": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --watch",
    "dev": "concurrently \"npm run build:css\" \"rails server\"",
    "build": "tailwindcss -i ./app/assets/stylesheets/application.css -o ./app/assets/builds/application.css --minify"
  },
  "keywords": [
    "rails",
    "tailwindcss",
    "ai",
    "wizard",
    "ide",
    "rules"
  ],
  "author": "Rules Wizard Team",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "concurrently": "^8.2.2",
    "tailwindcss": "^3.3.6"
  },
  "dependencies": {
    "alpinejs": "^3.13.3"
  }
}
